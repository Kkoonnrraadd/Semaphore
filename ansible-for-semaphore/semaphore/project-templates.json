[
  {
    "name": "Self-Service Data Refresh - Full Workflow",
    "description": "Complete data refresh from GOV002 to GOV001 environment",
    "playbook": "playbooks/self_service_refresh.yaml",
    "inventory": "inventory/hosts.ini",
    "environment": {},
    "extra_vars": {
      "op": "full",
      "dry_run_mode": false
    },
    "survey": [
      {
        "name": "source_env",
        "title": "Source Environment",
        "description": "Environment to copy data from",
        "type": "text",
        "required": true
      },
      {
        "name": "dest_env", 
        "title": "Destination Environment",
        "description": "Environment to copy data to",
        "type": "text",
        "required": true
      },
      {
        "name": "source_sub_id",
        "title": "Source Subscription ID",
        "description": "Azure subscription ID for source environment",
        "type": "text",
        "required": true
      },
      {
        "name": "dest_sub_id",
        "title": "Destination Subscription ID", 
        "description": "Azure subscription ID for destination environment",
        "type": "text",
        "required": true
      },
      {
        "name": "source_ns",
        "title": "Source Namespace",
        "description": "Source namespace (e.g., manufacturo)",
        "type": "text",
        "required": true
      },
      {
        "name": "dest_ns",
        "title": "Destination Namespace",
        "description": "Destination namespace (e.g., test)",
        "type": "text", 
        "required": true
      },
      {
        "name": "customer",
        "title": "Customer Alias",
        "description": "Customer alias for configuration",
        "type": "text",
        "required": true
      },
      {
        "name": "dry_run_mode",
        "title": "Dry Run Mode",
        "description": "Preview operations without making changes",
        "type": "boolean",
        "default": false,
        "required": false
      },
      {
        "name": "max_wait",
        "title": "Max Wait Time (minutes)",
        "description": "Maximum time to wait for operations",
        "type": "integer",
        "default": 40,
        "required": false
      }
    ]
  },
  {
    "name": "Self-Service Data Refresh - Dry Run",
    "description": "Preview data refresh operations without executing them",
    "playbook": "playbooks/self_service_refresh.yaml",
    "inventory": "inventory/hosts.ini",
    "environment": {},
    "extra_vars": {
      "op": "full",
      "dry_run_mode": true
    },
    "survey": [
      {
        "name": "source_env",
        "title": "Source Environment", 
        "description": "Environment to copy data from",
        "type": "text",
        "default": "gov002",
        "required": true
      },
      {
        "name": "dest_env",
        "title": "Destination Environment",
        "description": "Environment to copy data to", 
        "type": "text",
        "default": "gov001",
        "required": true
      }
    ]
  },
  {
    "name": "Self-Service - Database Copy Only",
    "description": "Copy database only (skip environment stop/start)",
    "playbook": "playbooks/self_service_refresh.yaml",
    "inventory": "inventory/hosts.ini",
    "environment": {},
    "extra_vars": {
      "op": "copy_database",
      "skip_stop_step": true,
      "skip_start_step": true,
      "skip_adjust_resources_step": true,
      "dry_run_mode": false
    },
    "survey": [
      {
        "name": "source_env",
        "title": "Source Environment",
        "description": "Environment to copy data from",
        "type": "text", 
        "default": "gov002",
        "required": true
      },
      {
        "name": "dest_env",
        "title": "Destination Environment",
        "description": "Environment to copy data to",
        "type": "text",
        "default": "gov001", 
        "required": true
      },
      {
        "name": "dry_run_mode",
        "title": "Dry Run Mode",
        "description": "Preview operations without making changes",
        "type": "boolean",
        "default": false,
        "required": false
      }
    ]
  }
]
